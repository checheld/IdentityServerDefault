@model ApiScopeModel
@{
    ViewData["Title"] = "API Scopes | Edit";
}

<div class="identityscopes-page">

    <h2>
        Edit Identity Scope: @Model.Name
    </h2>

    <div class="row">
        <div class="col-md-6">
            <form method="post" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.Name" class="form-control" />

                 <div class="form-group">
                    <label asp-for="@Model.Name" class="control-label"></label>
                    <input class="form-control" minlength="4" maxlength="40" asp-for="@Model.Name" autofocus />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.DisplayName" class="control-label"></label>
                    <input class="form-control" minlength="4" maxlength="40" asp-for="@Model.DisplayName" autofocus />
                    <span asp-validation-for="@Model.DisplayName" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label  class="control-label" asp-for="@Model.UserClaims" >User Claims (space delimited)</label>
                    <input class="form-control" minlength="4" maxlength="40" asp-for="@Model.UserClaims" />
                </div>

                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Save Changes</button>
                    @*<button class="btn btn-danger" type="submit" name="Button" value="delete">Delete</button>*@
                </div>
            </form>

        </div>
    </div>
    <div>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}