@model ApiScopeModel

@{
    ViewData["Title"] = "API Scopes | New";
}

<form method="post" asp-action="New" >
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
       <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" minlength="4" maxlength="40" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DisplayName" class="control-label"></label>
        <input class="form-control" minlength="4" maxlength="40" asp-for="DisplayName" />
        <span asp-validation-for="DisplayName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserClaims" class="control-label">User Claims (space delimited)</label>
        <input class="form-control" minlength="4" maxlength="40" asp-for="UserClaims" />
        <span asp-validation-for="UserClaims" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        @* <button class="btn btn-primary" type="submit">Save Changes</button>
        <a class="btn btn-secondary" asp-page="/Admin/ApiScopes/Index">Cancel</a>*@
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}