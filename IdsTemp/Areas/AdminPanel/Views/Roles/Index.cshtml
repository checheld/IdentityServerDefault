@model RolesViewModel

@{
    ViewData["Title"] = "Roles";
}

<div class="roles-page">
    <div class="row">
        <h2>
            Roles
        </h2>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form class="row">
                <div class="form-group">
                    <input class="form-control" placeholder="Filter" id="filter" name="filter" type="text" value="@Model.Filter" autofocus/>
                </div>
                <div class="form-group ml-2">
                    <button class="btn btn-primary">Search</button>
                </div>

                <div class="col">
                   <a href="@Url.Action("Index", "Home")" class="btn btn-dark mr-2 mb-3">Back to Admin</a> 
                    <a href="@Url.Action("New")" class="btn btn-success mb-3">New</a>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped table-sm table-responsive-lg">
                <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th></th>
                </tr>
                </thead>

                <tbody>
                @foreach (var role in Model.Roles)
                {
                    <tr>
                        <td>
                            @role.Id
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@role.Id">@role.Name</a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", new {role.Id})" class="btn btn-danger">Delete</a>
                            @* @Html.ActionLink("Delete", "Delete", new { role.Id }) *@
                        </td> 
                    </tr>
                }
                </tbody>

            </table>
        </div>
    </div>
</div>