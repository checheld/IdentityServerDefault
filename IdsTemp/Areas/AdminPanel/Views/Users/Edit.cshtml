@model UserEditModel

@{
    ViewData["Title"] = "Users | Edit";
}


<h2>Edit @Model.UserName</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" minlength="4" maxlength="40" autofocus/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" minlength="4" maxlength="40" autofocus/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" minlength="4" maxlength="40" autofocus/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type="email" asp-for="Email" class="form-control" minlength="4" maxlength="40" autofocus/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input type="tel" asp-for="Phone" class="form-control" minlength="10" maxlength="18" autofocus/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RolesList" class="control-label"></label>
                <select asp-for="@Model.SelectedRoleId" asp-items="@Model.RolesList" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <button type="submit" value="Edit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@Url.Action("Index")">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}