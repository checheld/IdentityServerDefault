@model UsersViewModel;

@{
    ViewData["Title"] = "Users";
}

<div class="user-container">

    <div class="row">
        <h2>Users</h2>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form class="row">
                <div class="form-group">
                    <input class="form-control" placeholder="Filter" id="filter" name="filter" type="text" value="@Model.Filter" autofocus/>
                </div>
                <div class="form-group ml-2">
                    <button class="btn btn-primary">Search</button>
                </div>

                <div class="col">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-dark mr-2 mb-3">Back to Admin</a>
                    <a href="@Url.Action("New")" class="btn btn-success mb-3">New</a>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped table-sm table-responsive-lg">
                <thead class="thead-dark">
                <tr class="users-tr-head">
                    <th>ID</th>
                    <th>UserName</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Role</th>
                    <th></th>

                </tr>
                </thead>

                <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td class="id-td-column">@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td>@user.Role</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info mr-1">Edit</a>|
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
                </tbody>

            </table>
        </div>
    </div>
</div>